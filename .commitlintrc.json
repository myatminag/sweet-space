{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "chore",
        "style",
        "refactor",
        "ci",
        "test",
        "perf",
        "update",
        "wip"
      ]
    ],
    "type-case": [2, "always", "lower-case"],
    "subject-case": [2, "always", ["lower-case", "kebab-case"]],
    "subject-empty": [2, "never"],
    "scope-case": [2, "always", ["lower-case", "kebab-case"]],
    "scope-empty": [2, "never"]
  }
}
